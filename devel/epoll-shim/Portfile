PortSystem                  1.0
PortGroup                   github 1.0
PortGroup                   cmake 1.1

github.setup                jiixyj epoll-shim 09a01c2
github.tarball_from         archive
version                     0.0.20220726

categories                  graphics
maintainers                 {@gcenx}
license                     MIT

platforms                   darwin
description                 Small epoll implementation using kqueue
long_description            ${description}

checksums                   rmd160  061b0651ae21b3bfa08f95aa3c722217f6dab59b \
                            sha256  cf1b563d593358a2eaea6990eb65e84bdff83167aebe06db336d0ac39aaeff4c \
                            size    102608

patch.pre_args              -p1

# https://github.com/wegank/nur-packages/tree/main/pkgs/development/libraries/epoll-shim
patchfiles                  0001-add-darwin-support.patch

configure.args-append       -DBUILD_TESTING=false \
                            -DCMAKE_INSTALL_INCLUDEDIR=include \
                            -DCMAKE_INSTALL_LIBDIR=lib

subport ${name}-headers {
    post-destroot {
        file delete -force ${destroot}${prefix}/lib
    }
}

subport ${name}-static {
    configure.args-append   -DBUILD_SHARED_LIBS=off
    post-destroot {
        file delete -force ${destroot}${prefix}/lib/cmake
        file delete -force ${destroot}${prefix}/lib/pkgconfig
    }
}

if {${subport} ni "${name}-headers"} {
    post-destroot {
        file delete -force ${destroot}${prefix}/include
    }
}
