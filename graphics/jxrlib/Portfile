PortSystem                  1.0
PortGroup                   github 1.0
PortGroup                   cmake 1.1

github.setup                4creators jxrlib 2019.10.9 v
github.tarball_from         archive
version                     1.1

categories                  graphics
maintainers                 {gcenx @gcenx}
license                     BSD

platforms                   darwin
description                 Open source implementation of jpegxr
long_description            ${description}

# Workaround TLS v1.2 requirements
if {${os.major} < 19} {
    depends_fetch-append    port:curl
    depends_skip_archcheck-append curl

    fetch {
        # Manually download the file(s) if they don't exist
        if {![file exists ${distpath}/${github.project}-${github.version}${extract.suffix} ]} {
            system -W ${distpath} "${prefix}/bin/curl -Lo ${github.project}-${github.version}${extract.suffix} https://github.com/${github.author}/${github.project}/${github.tarball_from}/refs/tags/${github.tag_prefix}${github.version}${extract.suffix}"
        }
    }
}

checksums                   rmd160  8d33229579aa1915e765ed3d28e950b26b9184e8 \
                            sha256  555c006e27c5cb66f99c05dcbb2feb197199ca9018dbd06d3467d37cd29a79cd \
                            size    346116

patch.pre_args              -p1

patchfiles                  0001-Add-ability-to-build-using-cmake.patch

post-patch {
        reinplace s|@VERSION@|${version}|g ${worksrcpath}/CMakeLists.txt
}
